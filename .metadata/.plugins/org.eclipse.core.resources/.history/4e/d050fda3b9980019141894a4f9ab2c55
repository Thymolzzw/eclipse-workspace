package myTest;
import java.io.*;
public class Example9_12
{   
   public static void main(String args[])
    {  
       RandomAccessFile inAndOut=null;
       char data[]={'a','s','d','v','?'};
       try{  
            inAndOut=new RandomAccessFile("a.txt","rw");
          //}
       //catch(Exception e){}
       //try{  
              for(int i=0;i<data.length;i++)
               {  
                  inAndOut.writeChar(data[i]);
               } 
             for(long i=data.length-1;i>=0;i--)  //一个int型数据占4个字节，我们从
               {                         //文件的第36个字节读取最后面的一个整数，
                  inAndOut.seek(i*2);      //每隔4个字节往前读取一个整数.
                  System.out.print(""+(char)inAndOut.readInt()+" ");
               }
              inAndOut.close();
          }
       catch(IOException e){} 
       
    }
}
