package myTest;
public class Example8_13
{
    public static void main(String args[])
    {
        Daemon d=new Daemon();
        d.a.start();
        d.b.setDaemon(true);
        d.b.start();
   }
}
class Daemon implements Runnable{

	Thread a,b;
	Daemon(){
		a=new Thread(this);
		b=new Thread(this);
	}
	
	@Override
	public void run() {
		// TODO 自动生成的方法存根
		if(Thread.currentThread()==a) {
			for(int i=0;i<10;i++) {
				System.out.println(i);
				try {
					Thread.sleep(3000);
				}catch(InterruptedException e) {
					//System.out.println();
				}
			}
		}else if(Thread.currentThread()==b){
			while(true) {
				System.out.println("守护");
				try {
					Thread.sleep(1000);
				}catch(InterruptedException e) {
					
				}
			}
			
		}
		
	}
	
}
