package myTest;

 public class TestWithThread
 {
     public static void main(String[] args)
     {
         //能达到工作和休息交替进行的任务
         WorkThread workThread = new WorkThread();
         RestThread restThread = new RestThread();
       //  Thread workThread = new WorkThread();
        
        workThread.start();
        for (int i=0; i<10; i++)
        {
            System.out.println("主线程 "+i);
            if(i==0){
	//restThread.start();
            }
            try
            {  
           	 Thread.sleep(1000); 
            }catch(InterruptedException e){}          
        }
      
        restThread.start();        

     }
 }
class Living1
{
     public static void work()
     {
          for(int i=0; i<10; i++)
          {
              System.out.println("工作 "+i);
              try
              {  
            	  Thread.sleep(1000); 
              }catch(InterruptedException e){}
          }
      }
     public static void rest()
     {
         for (int i=0; i<10; i++)
         {
             System.out.println("休息 "+i);
            try
             {  
            	 Thread.sleep(1000); 
             }catch(InterruptedException e){}          
         }
     }
 }
 class WorkThread extends Thread
 {
     public void run()
     {
         Living1.work();
     }
}
 class RestThread extends Thread
 {
     public void run()
     {
         Living1.rest();
     }
 }